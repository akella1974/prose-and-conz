{
  "variables": {
    "timestamp": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-de0d9eb7",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "codeshipped {{user `timestamp`}}",
      "tags": {
        "Timestamp": "{{user `timestamp`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'wget' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "sleep 10",
        "/usr/bin/apt-get -y install wget"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'unzip' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "sleep 10",
        "/usr/bin/apt-get -y install unzip"
      ]
    },
    {
      "type": "shell",
      "script": "java.sh"
    },
    {
      "type": "file",
      "source": "root.war",
      "destination": "/tmp/root.war"
    },
    {
      "type": "shell",
      "script": "jetty.sh"
    }
  ]
}